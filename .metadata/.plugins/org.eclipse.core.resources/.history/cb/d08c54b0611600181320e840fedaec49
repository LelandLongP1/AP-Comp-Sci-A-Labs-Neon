import java.util.Scanner;
import static java.lang.System.*;

public class GuessingGame
{
	private int upperBound;
	private int response = 0;
	private int randomNum;
	private int counter = 0;

	public GuessingGame(int stop)
	{
		
	}

	public void playGame()
	{
		Scanner keyboard = new Scanner(System.in);
		
			System.out.println("Guessing Game - How many numbers?");
			upperBound = keyboard.nextInt();
			randomNum = (int) (Math.random() * upperBound);
			System.out.println("Enter a number between 1 and " + upperBound);
			response = keyboard.nextInt();
			
			
			while (response != randomNum){
				response = keyboard.nextInt();
				if (response > upperBound){
					System.out.println("number out of range!");
				}
				else {
					counter = counter + 1;
				}
			}
			
			counter = counter + 1;
		





	}

	public String toString()
	{
		double percent = 100 * (counter/upperBound);
		String output= "It took " + counter + " guesses to guess " + counter + "\n" +
						"You guessed wrong " + percent + " percent of the time";
		return output;
	}
}