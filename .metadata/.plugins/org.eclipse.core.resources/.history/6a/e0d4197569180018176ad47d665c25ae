import java.lang.System;
import java.lang.Math;
import java.util.Scanner;

public class Grades
{
	//instance variables
	int size = 0;
	Scanner keyboard = new Scanner(System.in);
	double gradeList[] = new double[size];
	
	//constructor
	public Grades(int num){
		setArray(num);
		
	}
	

	//set method
	public void setArray(int num){
		size = num;
		for (int gradeNum = 0; gradeNum < size-1; gradeNum++){
			System.out.println("Enter grade " + (gradeNum + 1));
			gradeList[gradeNum] = keyboard.nextInt();
		}
	}



	private double getSum()
	{
		double sum=0.0;



		return sum;
	}

	public double getAverage()
	{
		double average=0.0;



		return average;
	}


	//toString method
	public String toString(){
		String output = "";
		for (int i = 0; i < size; i++){
			output = output + "\n" + gradeList[i];
		}
		return output;
	}


}